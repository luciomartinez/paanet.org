<% content_for :title, "Proyectos" %>
<% content_for :url, "/nosotros" %>
<% content_for :description, "Paanet cuenta con muchos proyectos
  para apoyar a la comunidad, nuevos campaÃ±as se suman todos los meses
  estando activos para el beneficio de nuestra sociedad." %>

<section id="projects-tile" class="page-cover">
  <h1 class="page-cover__title">Nosotros</h1>
  <h2 class="page-cover__sub-title">Nosotros somos buena gente...</h2>
</section>
<section class="view-content container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 project-list">
      <% @projects.each do |project| %>
        <div class="project-list__item">
          <%= link_to project.title, project.url, class: 'title', rel: 'nofollow' %>
          <p><%= project.description %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>
